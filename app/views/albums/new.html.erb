<form action="<%= band_albums_url(params[:band_id]) %>" method="POST">
  <p>Add an album</p>

  <p><label>
    Select a band

    <select name="album[band_id]" id="album_band_id">
    <% @bands.each do |band|%>
      <option value="<%= band.id %>"><%= band.name %><option>
    <% end%>
    </select>

  </label></p>

  <p><label>
    Name of album:
    <input name="album[name]" id="album_name" type="text"></p>
  </label></p>

  <p><label>
    Type of album:
    <select name="album[type]" id="album_type">
      <option value=""></option>
      <option value="live">Live</option>
      <option value="studio">Studio</option>
    </select>

  </label></p>

  <p><input type="submit"></p>
</form>