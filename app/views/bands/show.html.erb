<%= link_to "Add a new album to #{@band.name}", new_band_album_url(@band.id) %>

<%= "#{@band.name}'s Albums" %>

<% @band.albums.each do |album|
  p album %>
  <p><%= link_to album.name, album_url(album.id) %></p>
<% end %>

<p><strong><%= "#{@band.name}'s Tracks" %></strong></p>

<% @band.albums.each do |album| %>
     <p><strong><%= album.name %></strong></p>
     <% album.tracks.each do |track| %>

       <p><%= link_to track.name, track_url(track.id) %></p>
     <% end %>

     <p><%= "No tracks in this album" if album.tracks.length == 0 %>
<% end %>